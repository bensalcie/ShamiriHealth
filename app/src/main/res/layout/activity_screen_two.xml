<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenTwo">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

<!--        action bar-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/secondtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/backbtn"
                android:fontFamily="@font/raleway_medium"
                android:text="Wednesday Jan 16, 2022"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/backbtn"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/horizontal_line" />

        </RelativeLayout>
        <lib.kingja.switchbutton.SwitchMultiButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:strokeRadius="15dp"
            android:id="@+id/switchfamily"
            app:strokeWidth="1dp"

            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            app:selectedTab="0"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            app:selectedColor="@color/main_color"
            app:switchTabs="@array/switch_tabs"
            app:textSize="14sp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_height="200dp"/>

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="match_parent"
            app:cardElevation="3dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"

            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lefttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Mental Health"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fgtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="8/10"
                      />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@id/lefttext"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@id/fgtext"
                        android:background="@drawable/curved_corners"
                        android:backgroundTint="#E6D6D5"
                        android:padding="10dp" />



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lefttext1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Satisfaction"
                       />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fgtext1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="2.5/10"
                    />
                    <View
                        android:background="@drawable/curved_corners"
                        android:backgroundTint="#C56B65"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:layout_marginEnd="185dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@id/lefttext1"
                        android:layout_toLeftOf="@id/fgtext1"
                        android:layout_height="10dp"/>



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lefttext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Family/ Social support"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fgtext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="4.5/10"
                       />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@id/lefttext2"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="105dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@id/fgtext2"
                        android:background="@drawable/curved_corners"
                        android:backgroundTint="#C1DCC2"
                        android:padding="10dp" />



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lefttext3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Work"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fgtext3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="6/10"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@id/lefttext3"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="75dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@id/fgtext3"
                        android:background="@drawable/curved_corners"
                        android:backgroundTint="#A8CAA9"
                        android:padding="10dp" />



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lefttext4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Sense of purpose"
                       />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fgtext4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="4/10"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@id/lefttext4"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="75dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@id/fgtext4"
                        android:background="@drawable/curved_corners"
                        android:backgroundTint="#404140"
                        android:padding="10dp" />



                </RelativeLayout>


            </LinearLayout>

        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>